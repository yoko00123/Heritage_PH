\n<table border = \"0\">\n    <thead style=\"font-family: Verdana;\">\n        <tr>\n         <th style=\"border-style:none; text-align:center; color:black; font-size:14pt;\">{{Company}} </th>\n        </tr>\n        <tr>\n        <th style=\"border-style:none; text-align:center; color:black; font-size:12pt;\"></th>\n        </tr>\n        \n         <tr> \n         <th center style=\"border-style:none; font-size:10pt; font-weight:bold;\">Payslip ({{formatDate PayDate \"mmm dd, yyyy\"}} Pay-Out)</th>\n         </tr>\n\n         <tr> \n         <th center style=\"border-style:none; font-size:8pt; font-weight:normal;\"> {{formatDate StartDate \"mmm dd, yyyy\"}} - {{formatDate EndDate \"mmm dd, yyyy\"}}  </th>\n         </tr>\n         \n        \n     </thead>\n</table></center>\n<br>\n   \n\n    <table style=\"font:10pt verdana;\">\n        <thead>\n        <tr>\n            <td bold>Employee Code: </td>\n            <td>{{Code}}</td>\n            <td bold >Employee Status:</td>\n            <td>{{EmployeeStatus}}</td>\n        </tr>\n        <tr>\n            <td bold>Employee: </td>\n            <td>{{Name}}</td>\n             <td bold>Employee Number: </td>\n            <td>{{ID_Employee}}</td>\n        </tr>\n          </thead>\n          <tbody>\n        <tr>\n          \n            <td colspan=\"2\" valign=\"top\" >\n                <div style=\"font:10pt Verdana;\" margin-20 fix-height margin-right-20>\n                    <table>\n                        <tr bold headerbar footerbar>\n                            <th style=\"font:10pt Verdana;\"left>Earnings</th>\n                            <th style=\"font:10pt Verdana;\" right> Hours</th>\n                            <th style=\"font:10pt Verdana;\"right>Total</th>\n                        </tr>\n                        {{#eachfilter ../Earnings (concat '$.ID_Payroll ==' Payroll) }}\n                        <tr>\n                            <td left>{{Name}}</td>\n                            <td right>{{formatNumber Hours 2}}</td>\n                            <td right>{{formatNumber Total 2}}</td>\n                        </tr>\n                        {{/eachfilter}}\n                    </table>\n                </div>\n            </td>\n            <td colspan=\"2\" valign=\"top\">\n                <div margin-20 fix-height >\n                    <table style=\"font:10pt Verdana;\">\n                        <tr bold headerbar footerbar>\n                            <th left>Deductions</th>\n                            <th right>Total</th>\n                        </tr>\n                        {{#eachfilter ../Deductions (concat '$.ID_Payroll ==' Payroll) }}\n                        <tr>\n                            <td left>{{Name}}</td>\n                            <td right>{{formatNumber Total 2}}</td>\n                        </tr>\n                        {{/eachfilter}}\n                    </table>\n                </div>\n            </td>\n        </tr>\n    </table>\n\n        <table headerbar footerbar style=\"\">\n            <tr style=\"font:10pt verdana;\">\n                <td left bold >Gross Earnings:</td>\n                <td right>{{formatNumber GrossAmt 2}}</td>\n                <td left bold ><div padding-20>Total Deductions:</div></td>\n                <td right >{{formatNumber DeductionAmt 2}}</td>\n                <td left bold ><div padding-20>Net Pay:</div></td>\n                <td right >{{formatNumber NetAmt 2}}</td>\n            </tr>\n        </table>\n        \n         {{#withfilter ../PayslipYTD (concat '$.ID_PayrollPeriod==' ID_PayrollPeriod  '&& $.ID_Employee== 'ID_Employee) }}\n        <table footerbar-small margin-bottom-100 style=\"font:10pt verdana;\" cellpadding=\"5\">\n            <tr>\n                <td style=\"font:10pt Verdana; text-align:left;\"><b>TD Gross:</b> {{formatNumber GrossAmt 2}}</td>\n                <td style=\"font:10pt Verdana;\"><b>YTD Earnings:</b> {{formatNumber Earnings 2}}</td>\n                <td style=\"font:10pt Verdana;\"><b>YTD Contri:</b> {{formatNumber Contri 2}}</td>\n            </tr>\n            <tr>\n                <td style=\"font:10pt Verdana;\"><b>YTD Net:</b> {{formatNumber NetAmt 2}}</td>\n                <td style=\"font:10pt Verdana;\"><b>YTD Deductions:</b> {{formatNumber Deductions 2}}</td>\n                <td style=\"font:10pt Verdana;\"><b>YTD Tax:</b> {{formatNumber WithTax 2}}</td>\n            </tr>\n            </tbody>\n        </table>\n      \n    \n       \n        {{/withfilter}}\n    {{/each}}\n   \n","helpers":""}